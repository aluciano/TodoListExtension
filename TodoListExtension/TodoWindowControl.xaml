<UserControl x:Class="TodoListExtension.TodoWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas >
            <TextBox x:Name="txtTodo" Height="23"
                     TextWrapping="Wrap" 
                     Text="TextBox" 
                     Width="208" Canvas.Left="10" Canvas.Top="10" />
            <Button x:Name="btnAdd" Content="Add"
                    Width="67" 
                    Click="button1_Click" Canvas.Left="223" Canvas.Top="10" Height="23" />
            <ListBox x:Name="lstTodo" 
                     Height="252"  Width="280" SelectionChanged="lstTodo_SelectionChanged" Canvas.Left="10" Canvas.Top="38"/>
        </Canvas>
    </Grid>
</UserControl>
